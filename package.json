{
  "name": "hellonode",
  "version": "1.0.0",
  "description": "Hello World Alexa Skill using ASK Nodejs SDK",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix ./src/*",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn build --outDir ./lambda/custom"
    ]
  },
  "author": "ufoo68",
  "license": "Apache",
  "dependencies": {
    "@types/node": "^13.7.0",
    "ask-sdk-core": "2.10.*",
    "ask-sdk-model": "1.4.*",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "tsc": "^1.20150623.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  }
}
